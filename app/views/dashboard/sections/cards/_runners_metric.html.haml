.card.info-card.checker-card
  .card-body
    %h5.card-title.mb-4.mt-2
      Runners
    .d-flex.justify-content-around
      .text-center.d-flex.flex-column.align-items-center
        .card-icon.rounded-circle.d-flex.align-items-center.justify-content-center
          %i.bi.bi-play.text-success
        %h6 3
        %span.text-muted.small.d-block.ps-1 active
      .text-center.d-flex.flex-column.align-items-center
        .card-icon.rounded-circle.d-flex.align-items-center.justify-content-center
          %i.bi.bi-stop.text-danger
        %h6 1
        %span.text-muted.small.d-block.ps-1 inactive
      .text-center.d-flex.flex-column.align-items-center
        .card-icon.rounded-circle.d-flex.align-items-center.justify-content-center
          %i.bi.bi-pause.text-warning
        %h6 1
        %span.text-muted.small.d-block.ps-1 paused
