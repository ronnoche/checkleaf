%header#header.header.fixed-top.d-flex.align-items-center
  .d-flex.align-items-center.justify-content-between
    %a.logo.d-flex.align-items-center{:href => "index.html"}
      %img{:alt => "", :src => "assets/img/logo.png"}/
      %span.d-none.d-lg-block CheckLeaf
    %i.bi.bi-list.toggle-sidebar-btn
  / End Logo
  .search-bar
    %form.search-form.d-flex.align-items-center{:action => "#", :method => "POST"}
      %input{:name => "query", :placeholder => "Search", :title => "Enter search keyword", :type => "text"}/
      %button{:title => "Search", :type => "submit"}
        %i.bi.bi-search
  / End Search Bar
  %nav.header-nav.ms-auto
    %ul.d-flex.align-items-center
      %li.nav-item.d-block.d-lg-none
        %a.nav-link.nav-icon.search-bar-toggle{:href => "#"}
          %i.bi.bi-search
      / End Search Icon
      %li.nav-item.dropdown
        %a.nav-link.nav-icon{"data-bs-toggle" => "dropdown", :href => "#"}
          %i.bi.bi-bell
          %span.badge.bg-primary.badge-number 4
        / End Notification Icon
        %ul.dropdown-menu.dropdown-menu-end.dropdown-menu-arrow.notifications
          %li.dropdown-header
            You have 4 new notifications
            %a{:href => "#"}
              %span.badge.rounded-pill.bg-primary.p-2.ms-2 View all
          %li
            %hr.dropdown-divider/
          %li.notification-item
            %i.bi.bi-exclamation-circle.text-warning
