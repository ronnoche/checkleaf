- if current_user != true_user
  .alert.alert-warning.text-center
    You're logged in as
    %b
      = current_user.name
      (#{current_user.email})
    = link_to stop_impersonating_madmin_impersonates_path, method: :post do
      = icon("fas", "times")
      Logout

- if !user_signed_in?
  %nav.navbar.navbar-expand-sm.navbar-light.bg-light.border-bottom.border-2.border-dark.py-3
    .container.mx-auto
      = image_tag "logo/CheckLeaf.webp", alt: "Checkleaf Logo", size: "30x30"
      = link_to Rails.configuration.application_name, root_path, class: "navbar-brand fs-5"
      %button.navbar-toggler{"aria-controls" => "navbarsExample04", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarMain", "data-bs-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon
      #navbarMain.collapse.navbar-collapse
        %ul.navbar-nav.me-auto.mt-2.mt-md-0
        %ul.navbar-nav
          %li.nav-item.px-2.text-muted= link_to "What's New", announcements_path, class: "text-secondary nav-link #{unread_announcements(current_user)}"        
          .vertical-divider.mx-4
          %li.nav-item.mx-4= link_to "Sign Up", new_user_registration_path, class: "nav-link text-dark "
          %li.nav-item.btn-shadow= link_to "Login", new_user_session_path, class: "nav-link px-3"